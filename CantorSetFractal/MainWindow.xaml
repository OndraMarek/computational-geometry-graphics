<Window x:Class="CantorSetFractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CantorSetFractal"
        mc:Ignorable="d"
        Title="Cantor Set Fractal" Height="450" Width="800">

    <Grid>
        <Label Content="Number of iterations:" Margin="32,35,0,0" Height="27" Width="127" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="iterationsTextBox" HorizontalAlignment="Left" Height="23" Margin="159,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" PreviewTextInput="NumberValidationTextBox"/>
        <Button x:Name="drawCantorSet" Content="Draw Cantor Set" HorizontalAlignment="Left" Margin="280,37,0,0" VerticalAlignment="Top" Width="94" Click="DrawCantorSet_Click"/>
        <Button x:Name="exit" Content="Exit" HorizontalAlignment="Left" Margin="625,37,0,0" VerticalAlignment="Top" Width="94" Click="Exit_Click"/>
        <Canvas x:Name="drawCantorSetCanvas" Width="800" Height="400" Background="White" VerticalAlignment="Top" Margin="0,84,0,0"/>
    </Grid>
</Window>
